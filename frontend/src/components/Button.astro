---
interface Props {
    href?: string;
    target?: string;
    class?: string;
    id?: string; // Add id prop
    onClick?: string;
}

const { href, target, class: buttonClass, id } = Astro.props as Props; // Destructure id

const { onClick = "" } = Astro.props;
---

<style>
    :root {
        --pirate-teal: #1a6b6b;
        --moss-green: #4a8c3e;
        --golden-treasure: #ffc145;

        --crimson-red: #d64045;
        --misty-aqua: #88c9d1;
        --driftwood-brown: #a67c52;

        --parchment: #f5f5dc;
        --charcoal: #2a2a2a;

        --shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .button {
        display: inline-flex; /* Use flexbox for alignment */
        align-items: center; /* Vertically center content */
        justify-content: center; /* Horizontally center content */
        gap: 0.5rem; /* Add space between text and icon */
        text-decoration: none; /* Remove underline from links */
        background-color: var(--pirate-teal);
        color: var(--parchment);
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 100;
        border-radius: 0.5rem;
        cursor: pointer;
        transition:
            transform 0.2s ease,
            box-shadow 0.3s ease;
        box-shadow: var(--shadow);
        position: relative;
        overflow: hidden;
        z-index: 0;
        -webkit-user-select: none; /* Safari */
        -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* IE10+/Edge */
        user-select: none; /* Standard */
    }

    .button::before {
        content: "";
        position: absolute;
        background: var(--golden-treasure);
        width: 100%;
        height: 0%;
        top: 0;
        left: 0;
        z-index: -1;
        transition: height 0.2s ease;
    }

    .button:hover::before {
        height: 100%;
    }

    .button:hover {
        color: var(--charcoal);
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
    }

    .button:active {
        transform: scale(0.98);
    }

    .button * {
        -webkit-user-select: none; /* Safari */        
        -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* IE10+/Edge */
        user-select: none; /* Standard */
    }
</style>

{
    href ? (
        <a href={href} class={`button ${buttonClass || ''}`} target={target} id={id}>
            <slot />
        </a>
    ) : (
        <button type="submit" class={`button ${buttonClass || ''}`} id={id} onclick={onClick}> {/* Add type="submit" and id */}
            <slot />
        </button>
    )
}