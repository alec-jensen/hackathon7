---
// Props passed to the component
import { Image } from "astro:assets";
import wordmark from "../assets/chorus.svg";
import logo from "../assets/logoSquare.svg";
---

<style>
    .image-pair {
        display: flex;
        flex-direction: row;
        gap: 1rem;
        flex-wrap: wrap; /* just in case something weird happens */
    }

    .image-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        max-height: var(--max-height);
        overflow: hidden;
    }

    .image-wrapper img {
        max-height: var(--max-height);
        width: auto;
        max-width: 100%;
        object-fit: cover;
        display: block;
    }

    @media (max-width: 768px) {
        .image-pair {
            flex-direction: column;
        }
    }
</style>

<div class="image-pair">
    <div class="image-wrapper">
        <Image src={logo} alt="chorus" />
    </div>
    <div class="image-wrapper">
        <Image src={wordmark} alt="chorus" />
    </div>
</div>
