---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import wordmark from "../assets/chorus.svg";
import { Image } from "astro:assets";
import AniButton from "../components/Button.astro";
import SideBySide from "../layouts/SideBySide.astro";
---

<Layout hideTitlebar={true}>
    <div><Welcome class="centered-div" /></div>
    <div class="container">
        <div class="centered-div">
            <AniButton href="/login"> Login </AniButton>
        </div>
    </div>
    <div class="github-container">
        <AniButton
            href="https://github.com/alec-jensen/hackathon7"
            target="_blank"
            class="github-button"
        >
            Checkout our Github
            <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
                ><path
                    fill="currentColor"
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
                ></path></svg
            >
        </AniButton>
    </div>
</Layout>

<style>
    .github-container {
        position: fixed; /* Changed from absolute */
        bottom: 20px; /* Added padding from bottom */
        right: 20px; /* Changed from left: 0 */
    }

    .github-button {
        background-color: #24292f;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        display: flex;
        align-items: center;
    }

    .github-button svg {
        margin-left: 8px;
    }
</style>